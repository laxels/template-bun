{
  "name": "template-bun",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "dev:cli": "bun --hot src/cli.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "start:cli": "NODE_ENV=production bun src/cli.ts",
    "build": "bun build.ts",
    "build:cli": "bun build --compile --minify --sourcemap --bytecode src/cli.ts --outfile=dist/cli",
    "validate": "concurrently --group --names typecheck,lint,test --prefix name --prefix-colors auto \"bun run typecheck\" \"bun run lint\" \"bun run test\"",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write --diagnostic-level=error",
    "test": "bun test --pass-with-no-tests"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.51.4",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.3",
    "bun-plugin-tailwind": "0.1.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lodash": "4.17.21",
    "lucide-react": "0.545.0",
    "react": "19",
    "react-dom": "19",
    "tailwind-merge": "3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "@types/lodash": "4.17.23",
    "@types/react": "19",
    "@types/react-dom": "19",
    "concurrently": "9.2.1",
    "cross-env": "10.1.0",
    "tailwindcss": "4.1.11",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3"
  }
}
