{
  "name": "template-bun",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build --compile --minify --sourcemap --bytecode src/index.ts --outfile=dist/cli",
    "validate": "cross-env FORCE_COLOR=1 run-p --aggregate-output --print-label typecheck lint test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write --diagnostic-level=error",
    "test": "bun test --pass-with-no-tests"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "latest",
    "@types/lodash": "^4.17.21",
    "cross-env": "^10.1.0",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5.9.3"
  }
}
