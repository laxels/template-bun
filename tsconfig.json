{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": false,
    "resolveJsonModule": true, // Allow importing JSON files as modules

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true, // Use 'unknown' instead of 'any' for catch clause variables
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file references

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "paths": {
      "@/*": ["./src/*"], // Allow imports from '@/component' instead of 'src/component'
      "@scripts/*": ["./scripts/*"] // Allow imports from '@scripts' instead of 'scripts/'
    }
  },

  "exclude": ["dist", "node_modules"]
}
